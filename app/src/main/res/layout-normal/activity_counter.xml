<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/darkBlackRed"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.paceraudio.numberreactor.app.MainActivity">

    <LinearLayout
        android:id="@+id/fade_linearLayout"
        style="@style/LinearLayoutContainingGameInfo.Top">

        <TextView
            android:id="@+id/t_v_fade_target"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:paddingLeft="0dp"
            android:text="@string/target"
            style="@style/NumberReactorTextView.GameInfoTextViews.Normal.CounterActivity"/>

        <TextView
            android:id="@+id/t_v_fade_accuracy_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="right"
            android:text="@string/accuracy"
            style="@style/NumberReactorTextView.GameInfoTextViews.Normal.CounterActivity"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fade_frame_counter"
        android:layout_below="@+id/fade_linearLayout"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        style="@style/NumberReactorFrameLayout.CounterFrame">

        <TextView
            android:id="@+id/t_v_fade_counter"
            style="@style/NumberReactorTextView.Counter.Normal.CounterActivity"
            />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/l_l_fade_game_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@color/darkBlackRed"
        android:orientation="horizontal"
        android:padding="4dp"
        android:weightSum="100">

        <TextView
            android:id="@+id/t_v_fade_lives_remaining"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:gravity="left"
            android:text="@string/lives_remaining"
            android:textColor="@color/red"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/t_v_fade_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:gravity="center_horizontal"
            android:text="@string/score"
            android:textColor="@color/red"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/t_v_fade_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:gravity="right"
            android:text="@string/level"
            android:textColor="@color/red"
            android:textSize="15sp"
            />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/frame_fade_b_start"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/fade_frame_counter"
        android:layout_alignTop="@+id/fade_frame_b_stop"
        android:layout_marginLeft="15dp"
        android:background="@color/brown"
        android:gravity="center"
        android:padding="2dp">

        <Button
            android:id="@+id/fade_b_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darkBlackRed"
            android:text="@string/start"
            android:textColor="@color/grey"
            android:textSize="45sp"
            android:typeface="normal"
            />


        ></FrameLayout>

    <FrameLayout
        android:id="@+id/fade_frame_b_stop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/l_l_fade_game_info"
        android:layout_alignRight="@+id/fade_frame_counter"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="15dp"
        android:background="@color/brown"
        android:gravity="center"
        android:padding="2dp">

        <Button
            android:id="@+id/fade_b_stop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darkBlackRed"
            android:text="@string/stop"
            android:textColor="@color/grey"
            android:textSize="45sp"
            android:typeface="normal"
            />

    </FrameLayout>

</RelativeLayout>
