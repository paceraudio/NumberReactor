<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/darkBlackRed"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.paceraudio.numberreactor.app.CounterActivity">

    <LinearLayout
        android:id="@+id/fade_linearLayout"
        style="@style/LinearLayoutContainingGameInfo.Top">

        <TextView
            android:id="@+id/t_v_fade_target"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="64"
            android:paddingLeft="0dp"
            android:text="@string/target"
            style="@style/NumberReactorTextView.GameInfoTextViews.Large.FadeCounterActivity"

            />

        <TextView
            android:id="@+id/t_v_fade_accuracy_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="36"
            android:gravity="left"
            android:text="@string/accuracy"
            style="@style/NumberReactorTextView.GameInfoTextViews.Large.FadeCounterActivity"

            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fade_frame_counter"
        android:layout_below="@+id/fade_linearLayout"
        android:layout_marginTop="91dp"
        style="@style/NumberReactorFrameLayout.CounterFrame">

        <TextView
            android:id="@+id/t_v_fade_counter"
            style="@style/NumberReactorTextView.Counter.Large.FadeCounterActivity"
            />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/l_l_fade_game_info"
        style="@style/LinearLayoutContainingGameInfo.Bottom">

        <TextView
            android:id="@+id/t_v_fade_lives_remaining"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="43"
            android:gravity="left"
            android:text="@string/lives_remaining"
            style="@style/NumberReactorTextView.GameInfoTextViews.Large.FadeCounterActivity"

            />

        <TextView
            android:id="@+id/t_v_fade_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:gravity="left"
            android:text="@string/score"
            style="@style/NumberReactorTextView.GameInfoTextViews.Large.FadeCounterActivity"

            />

        <TextView
            android:id="@+id/t_v_fade_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="23"
            android:gravity="right"
            android:text="@string/level"
            style="@style/NumberReactorTextView.GameInfoTextViews.Large.FadeCounterActivity"
            />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/fade_frame_b_start"
        android:layout_alignLeft="@+id/fade_frame_counter"
        android:layout_alignTop="@+id/fade_frame_b_stop"
        android:layout_marginLeft="30dp"
        style="@style/NumberReactorFrameLayout.LargeButtons">

        <Button
            android:id="@+id/fade_b_start"
            style="@style/NumberReactorButtonStyle.Large.Start"
            />


        ></FrameLayout>

    <FrameLayout
        android:id="@+id/fade_frame_b_stop"
        android:layout_above="@+id/l_l_fade_game_info"
        android:layout_alignRight="@+id/fade_frame_counter"
        android:layout_marginBottom="58dp"
        android:layout_marginRight="30dp"
        style="@style/NumberReactorFrameLayout.LargeButtons">

        <Button
            android:id="@+id/fade_b_stop"
            style="@style/NumberReactorButtonStyle.Large.Stop"
            />

    </FrameLayout>

</RelativeLayout>
