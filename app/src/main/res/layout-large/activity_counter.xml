<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/darkBlackRed"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.paceraudio.numberreactor.app.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@color/darkBlackRed"
        android:orientation="horizontal"
        android:padding="4dp"
        android:weightSum="100">

        <TextView
            android:id="@+id/t_v_target"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="64"
            android:paddingLeft="0dp"
            android:text="@string/target"
            android:textColor="@color/red"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/t_v_accuracy_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="36"
            android:gravity="left"
            android:text="@string/accuracy"
            android:textColor="@color/red"
            android:textSize="25sp"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="91dp"
        android:background="@color/brown"
        android:padding="2dp">

        <TextView
            android:id="@+id/t_v_counter"
            android:layout_width="560dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:gravity="center_horizontal"
            android:text="@string/zero_point_zero"
            android:textColor="@color/red"
            android:textSize="220sp"
            android:typeface="normal"
            />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/l_l_game_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@color/darkBlackRed"
        android:orientation="horizontal"
        android:padding="4dp"
        android:weightSum="100">

        <TextView
            android:id="@+id/t_v_lives_remaining"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="43"
            android:background="@color/darkBlackRed"
            android:gravity="left"
            android:text="@string/lives_remaining"
            android:textColor="@color/red"
            android:textSize="24sp"
            />

        <TextView
            android:id="@+id/t_v_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:background="@color/darkBlackRed"
            android:gravity="left"
            android:text="@string/score"
            android:textColor="@color/red"
            android:textSize="24sp"
            />

        <TextView
            android:id="@+id/t_v_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="23"
            android:background="@color/darkBlackRed"
            android:gravity="right"
            android:text="@string/level"
            android:textColor="@color/red"
            android:textSize="24sp"
            />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/frame_b_start"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/frame_counter"
        android:layout_alignTop="@+id/frame_b_stop"
        android:layout_marginLeft="30dp"
        android:background="@color/brown"
        android:gravity="center"
        android:padding="2dp">

        <Button
            android:id="@+id/b_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darkBlackRed"
            android:text="@string/start"
            android:textColor="@color/grey"
            android:textSize="90sp"
            android:typeface="normal"
            />


    ></FrameLayout>

    <FrameLayout
        android:id="@+id/frame_b_stop"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/l_l_game_info"
        android:layout_alignRight="@+id/frame_counter"
        android:layout_marginBottom="58dp"
        android:layout_marginRight="30dp"
        android:background="@color/brown"
        android:gravity="center"
        android:padding="2dp">

         <Button
            android:id="@+id/b_stop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darkBlackRed"
            android:text="@string/stop"
            android:textColor="@color/grey"
            android:textSize="90sp"
            android:typeface="normal"
            />



        </FrameLayout>




</RelativeLayout>
