<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.paceraudio.numberreactor.app.OutOfLivesDialogFragment">

    <TextView
        android:id="@+id/t_v_out_of_lives_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/out_of_lives_dialog"
        android:textSize="20sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_below="@id/t_v_out_of_lives_dialog">

        <Button
            android:id="@+id/b_yes_out_of_lives_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/OK"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b_exit_out_of_lives_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/exit"
            android:textSize="30sp"/>
   </LinearLayout>

</RelativeLayout>






