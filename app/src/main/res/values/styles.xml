<resources>



    <style name="NR_FrameLayout">
        <item name="android:padding">2dp</item>
        <item name="android:background">@color/brown</item>
    </style>

    <!--FRAME LAYOUT FOR COUNTER-->
    <style name="NR_FrameLayout.CounterFrame">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!--X-LARGE-->
    <style name="NR_FrameLayout.CounterFrame.XLarge">
        <item name="android:layout_marginTop">100dp</item>
    </style>

    <!--LARGE-->
    <style name="NR_FrameLayout.CounterFrame.Large">
        <item name="android:layout_marginTop">91dp</item>
    </style>

    <!--NORMAL-->
    <style name="NR_FrameLayout.CounterFrame.Normal">
        <item name="android:layout_marginTop">80dp</item>
    </style>

    <!--FRAME LAYOUT FOR BUTTONS-->

    <!--X-LARGE-->
    <style name="NR_FrameLayout.XLargeButtons">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">180dp</item>
    </style>

    <style name="NR_FrameLayout.XLargeButtons.Start">
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="NR_FrameLayout.XLargeButtons.Stop">
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginBottom">58dp</item>
    </style>


    <!--LARGE-->
    <style name="NR_FrameLayout.LargeButtons">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="NR_FrameLayout.LargeButtons.Start">
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="NR_FrameLayout.LargeButtons.Stop">
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginBottom">58dp</item>
    </style>

    <!--NORMAL-->
    <style name="NR_FrameLayout.NormalButtons">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
    </style>

    <style name="NR_FrameLayout.NormalButtons.Start">
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="NR_FrameLayout.NormalButtons.Stop">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">35dp</item>
    </style>
    <!--********************BUTTON STYLES*********************-->
    <!--all buttons must be placed in a framelayout with 2dp padding-->

    <style name="NR_ButtonStyle">
        <item name="android:background">@color/darkBlackRed</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:typeface">normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <!--X-LARGE-->
    <style name="NR_ButtonStyle.XLarge">
        <item name="android:textSize">110sp</item>
    </style>

    <style name="NR_ButtonStyle.XLarge.Start">
        <item name="android:text">@string/start</item>
    </style>

    <style name="NR_ButtonStyle.XLarge.Stop">
        <item name="android:text">@string/stop</item>
    </style>

    <!--LARGE-->
    <style name="NR_ButtonStyle.Large">
        <item name="android:textSize">90sp</item>
    </style>

    <style name="NR_ButtonStyle.Large.Start">
        <item name="android:text">@string/start</item>
    </style>

    <style name="NR_ButtonStyle.Large.Stop">
        <item name="android:text">@string/stop</item>
    </style>

    <!--NORMAL-->
    <style name="NR_ButtonStyle.Normal">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="NR_ButtonStyle.Normal.Start">
        <item name="android:text">@string/start</item>
    </style>

    <style name="NR_ButtonStyle.Normal.Stop">
        <item name="android:text">@string/stop</item>
    </style>

    

    <!--********************LINEAR LAYOUT FOR GAME INFO TEXTVIEWS********************-->

    <style name="NR_LinearLayoutContainingGameInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/darkBlackRed</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">100</item>
    </style>

    <style name="NR_LinearLayoutContainingGameInfo.Top">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="NR_LinearLayoutContainingGameInfo.Bottom">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

