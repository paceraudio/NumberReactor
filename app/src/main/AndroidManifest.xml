<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pacerdevelopment.numberreactor.app" >

    <application
        android:name="com.pacerdevelopment.numberreactor.app.application.ApplicationState"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_n_r"
        android:label="@string/app_name"
        android:theme="@style/NumberReactorAppTheme" >
        <activity
            android:name=".counter.vp_fade_counter.FadeOutCounterActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
        </activity>
        <activity
            android:name=".counter.vp_accel_counter.CounterActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
             >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".vp_stats.ViewStatsActivity"
            android:label="@string/title_activity_view_stats"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".vp_settings.SettingsActivity"
            android:label="@string/title_activity_settings_2"
            android:theme="@style/NR_SettingsActivity" >
        </activity>

    </application>

</manifest>
